<header class='title-container'>
	<input type="text" class='note-title' value="<%= @note.get('title') %>" placeholder="Title.." />
</header>

<div class='body'>
	<textarea class='note-content' placeholder="Content.."><%=@note.get('content') %> </textarea>
</div>

<div class="normal-footer">
	<%= @note.get('updated_at') %>
</div>

<div class="editting-footer">
	<button type='submit' class='save'> save </button>
</div>

<button class="destroy-note" tabindex="-1">Remove</button>